{
  "extends": [
    "next/core-web-vitals", // Next.js base linting rules
    "eslint:recommended",    // Recommended ESLint rules
    "plugin:react/recommended", // React linting rules
    "plugin:@typescript-eslint/recommended" // TypeScript linting rules
  ],
  "parser": "@typescript-eslint/parser", // Parser for TypeScript files
  "plugins": [
    "react",                 // React linting plugin
    "@typescript-eslint"     // TypeScript linting plugin
  ],
  "parserOptions": {
    "ecmaVersion": 2020,      // Set ECMAScript version to 2020
    "sourceType": "module"    // Set source type to module for imports/exports
  },
  "rules": {
    // Add custom rules here if needed
  },
  "overrides": [
    {
      "files": ["*.js", "*.jsx"], // Files to apply these settings
      "rules": {
        // JavaScript specific rules can go here
      }
    },
    {
      "files": ["*.ts", "*.tsx"], // TypeScript specific rules can go here
      "rules": {
        // TypeScript specific rules can go here
      }
    }
  ]
}
